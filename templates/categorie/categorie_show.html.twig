{% extends 'base.html.twig' %}

{% block title %}page{% endblock %}

{% block body %}

    <h1>{{ categorie.libelle }}</h1>

    <div class="row">
        {% for annonce in categorie.annonces %}
            <div class="col-4 mt-4">
                <div class="card">
                    <a href="{{ path('annonce_show', { 'id' : annonce.id } ) }}">
                        <img class="card-img-top" src="{{ annonce.image }}" alt="">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><a href="{{ path('annonce_show', { 'id' : annonce.id } ) }}">{{ annonce.titre }}</a></h5>
                        <p class="card-text">
                            {{ annonce.description }}
                        </p>
                        <p><b>{{ annonce.prix|number_format(2, '.', ',') }} €</b></p>
                        <small>Créé le : {{ annonce.createdAt|date('d-m-Y') }}</small>
                    </div>
                </div>
            </div>

        {% else %}

            <p>Aucune annonce</p>

        {% endfor %}
    </div>

{% endblock %}
